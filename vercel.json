{
  "name": "postiz-frontend",
  "version": 2,
  "buildCommand": "cd apps/frontend && pnpm run build",
  "outputDirectory": "apps/frontend/.next",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "apps/frontend/pages/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-railway-backend.railway.app/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://your-railway-backend.railway.app",
    "FRONTEND_URL": "https://your-vercel-app.vercel.app"
  }
}
